@model List<MovieManage.ViewModel.MovieViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Movie List</h3>
        <a asp-action="Create" class="btn btn-success">+ Add Movie</a>
    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Detail</th>
                <th>Release Date</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Detail</td>
                    <td>@item.ReleaseDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.MovieId" class="btn btn-sm btn-primary me-1"><i class="bi bi-pen"></i></a>
                        <a asp-action="Details" asp-route-id="@item.MovieId" class="btn btn-sm btn-info me-1 text-white">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.MovieId" class="btn btn-sm btn-danger"><i class="bi bi-x "></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

