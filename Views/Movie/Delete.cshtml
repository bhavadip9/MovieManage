<div class="container mt-5">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Movie</h4>
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <strong>Are you sure you want to delete this movie?</strong>
            </div>

            <dl class="row mb-4">
                <dt class="col-sm-3">Title</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Detail</dt>
                <dd class="col-sm-9">@Model.Detail</dd>

                <dt class="col-sm-3">Release Date</dt>
                <dd class="col-sm-9">@Model.ReleaseDate.ToString("yyyy-MM-dd")</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="MovieId" />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>